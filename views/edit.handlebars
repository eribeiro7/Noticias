<div class="container mt-9">
    <div class="row">
        <div class="col-sm-12 centered">
            <h4>Editar dados do {{dados.name}}</h4>
            <form action="/update" method="POST">
                <div class="form-group">
                    <img src="../img/users.png" alt="">
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control" value="{{dados.id}}" id="id"
                        name="id" readonly>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="{{dados.name}}" placeholder="Insira o nome..." id="name"
                        name="name">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" value="{{dados.age}}" placeholder="Insira a idade..." id="age" name="age">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" value="{{dados.phone}}" placeholder="Insira nÂº de telefone..." id="phone" name="phone">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" value="{{dados.email}}" placeholder="Insira o email..." id="email"
                        name="email">
                </div>
                <button type="submit" class="btn btn-block btn-success">Actualizar</button>
                <a href="/" class="btn btn-block btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>